<Page
    x:Class="TaskSlateApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TaskSlateApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <!--Set defaults for styling-->

        <!--This affects all buttons, NOT what I want-->
        <Style TargetType="Button" x:Key="PersonButtonStyle">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>

        <!--set button gradient in IDictionary with key for C# code behind-->
        <LinearGradientBrush x:Key="ButtonGradient" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF033209" Offset="1"/>
            <GradientStop Color="#FFB4B3B3" Offset="0"/>
        </LinearGradientBrush>

    </Page.Resources>

    <Grid x:Name="BackgroundSlate">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border x:Name="TopBarBorder" BorderBrush="#FFF7F3F3" Height="56" VerticalAlignment="Top" Background="#00D3D3D3" BorderThickness="5,5,5,5" Opacity="0.5" FocusVisualPrimaryBrush="White" MinWidth="360" Padding="0,0,1,0"/>

        <TextBlock x:Name="CurrentTimeText" HorizontalAlignment="Right" Height="32" Margin="0,16,10,0" Text="99:99 PM" TextWrapping="NoWrap" VerticalAlignment="Top" Width="102" Foreground="#FF1DFF00" FontSize="20" FontFamily="Arial" FontStyle="Italic" TextAlignment="Center" FlowDirection="RightToLeft" Opacity="0.8">
            <TextBlock.FocusVisualPrimaryBrush>
                <SolidColorBrush Color="#FFF7F7F7" Opacity="1"/>
            </TextBlock.FocusVisualPrimaryBrush>
        </TextBlock>

        <TextBlock x:Name="PersonAndDate" Height="56" Margin="0,61,0,0" Text="Person - Date" TextWrapping="Wrap" VerticalAlignment="Top" FocusVisualPrimaryBrush="#FFF7F3F3" FontSize="24" TextAlignment="Center" FontFamily="Segoe UI" FontStyle="Italic" Foreground="White"/>

        <!--Top Bar Buttons-->
        <Button x:Name="HomeButton" Height="32" Margin="20,12,0,0" VerticalAlignment="Top" Width="48" Foreground="White" Click="HomeButton_Click">
            <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE80F;" HorizontalAlignment="Left" Width="20"/>
        </Button>

        <Button x:Name="PersonButton" Height="32" Margin="80,12,0,0" VerticalAlignment="Top" Width="48" Foreground="#FFFBFBFB" Click="PersonButton_Click">
            <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE77B;"/>
        </Button>

        <Button x:Name="CalendarButton" Height="32" Margin="140,12,0,0" VerticalAlignment="Top" Width="48" Foreground="White" Click="CalendarButton_Click">
            <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE787;"/>
        </Button>

        <Button x:Name="AlarmButton" Height="32" Margin="200,12,0,0" VerticalAlignment="Top" Width="48" Click="AlarmButton_Click" FontFamily="Segoe MDL2 Assets" Foreground="White">
            <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xEA8F;"/>
        </Button>

        <!--Stack panel for task lists, etc.-->
        <StackPanel x:Name="CheckBoxStackPanel" HorizontalAlignment="Center" Height="421" Margin="0,120,0,0" VerticalAlignment="Top" Width="340">
            <CheckBox x:Name="TaskCheckBox" Content="Task1" Height="31" Margin="10,120,10,0" HorizontalAlignment="Stretch" FontFamily="Segoe UI" FontSize="20" Foreground="White" Padding="8,2,0,0" FontStyle="Normal" FocusVisualPrimaryBrush="White" Background="{x:Null}" BorderBrush="{x:Null}" Checked="TaskCheckBox_Checked"/>
        </StackPanel>

        <!--Stack panel for person list-->
        <StackPanel x:Name="ButtonStackPanel" HorizontalAlignment="Center" Height="421" Margin="0,120,0,0" VerticalAlignment="Top" Width="340">
            <Button Style="{StaticResource PersonButtonStyle}" Content="Button" HorizontalAlignment="Stretch" Foreground="White" FontWeight="Bold" FontSize="20">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF033209" Offset="1"/>
                        <GradientStop Color="#FFB4B3B3" Offset="0"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

        </StackPanel>

        <!--Stack panel for calendar-->
        <StackPanel x:Name="CalendarStackPanel" HorizontalAlignment="Center" Height="421" Margin="0,120,0,0" VerticalAlignment="Top" Width="340">
            <CalendarView x:Name="TaskSlateCalendar" Height="290" Width="342" Background="Black" OutOfScopeForeground="White" SelectedForeground="#FF00D71D" PressedForeground="#FF00D71D" CalendarItemForeground="White" OutOfScopeBackground="Black" CalendarItemBackground="Black" BlackoutForeground="#FF27D700" Foreground="#CCFFFFFF" SelectedBorderBrush="#FF00D71D" SelectedPressedBorderBrush="#FF27D700" TodayForeground="White" HorizontalAlignment="Stretch" VerticalAlignment="Top" FocusVisualPrimaryBrush="#FF27D700" FocusBorderBrush="#FF27D700" SelectedHoverBorderBrush="#FF27D700"/>
        </StackPanel>

        <!--Grid for add button can NOT get to collapse or clear???-->
        <Grid x:Name="AddButtonGrid" HorizontalAlignment="Center" Height="66" Margin="0,564,0,0" VerticalAlignment="Top" Width="340"/>
        <Button x:Name="AddButton" Content="+" Height="26" Margin="10,0,0,50" VerticalAlignment="Bottom" Width="25" FontFamily="Times New Roman" Click="AddButton_Click" FontSize="20" Padding="0,0,0,0">
            <Button.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF03FF23" Offset="0"/>
                </LinearGradientBrush>
            </Button.Foreground>
        </Button>

        <TextBlock x:Name="AddButtonText" HorizontalAlignment="Left" Height="26" Margin="40,0,0,50" Text="AddTask" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="192" TextAlignment="Left" FontSize="20" FontFamily="Segoe UI">
            <TextBlock.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF03FF23" Offset="0"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>
    </Grid>

</Page>

